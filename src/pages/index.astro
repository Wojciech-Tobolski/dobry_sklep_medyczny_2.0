<script>
  // Globalna funkcja do otwierania modali produktów
  (window as any).openProductModal = function (modalId: string) {
    console.log("Otwieram modal:", modalId);
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.classList.remove("hidden");
      document.body.style.overflow = "hidden";
      console.log("Modal otwarty:", modalId);
    } else {
      console.error("Modal nie znaleziony:", modalId);
    }
  };

  // Zamykanie modali
  (window as any).closeProductModal = function (modalId: string) {
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.classList.add("hidden");
      document.body.style.overflow = "auto";
    }
  };

  // Event listenery dla przycisków "Zobacz szczegóły"
  document.addEventListener("DOMContentLoaded", function () {
    document.addEventListener("click", function (e) {
      const target = e.target as HTMLElement;
      if (target && target.classList.contains("product-detail-btn")) {
        const modalId = target.getAttribute("data-modal-id");
        if (modalId) {
          (window as any).openProductModal(modalId);
        }
      }
    });
  });

  // Zamykanie modali po kliknięciu poza nimi
  document.addEventListener("click", function (e) {
    const target = e.target as HTMLElement;
    if (
      target &&
      target.classList.contains("fixed") &&
      target.classList.contains("bg-black")
    ) {
      target.classList.add("hidden");
      document.body.style.overflow = "auto";
    }
  });

  // Zamykanie modali klawiszem Escape
  document.addEventListener("keydown", function (e) {
    if (e.key === "Escape") {
      const openModals = document.querySelectorAll(
        ".fixed.bg-black:not(.hidden)"
      );
      openModals.forEach((modal) => {
        modal.classList.add("hidden");
        document.body.style.overflow = "auto";
      });
    }
  });

  // Globalna funkcja do zmiany głównego zdjęcia w galerii
  (window as any).changeMainImage = function (modalId: string, src: string) {
    const mainImage = document.getElementById(
      `mainImage-${modalId}`
    ) as HTMLImageElement;
    if (mainImage) {
      mainImage.src = src;
    }
  };
</script>

