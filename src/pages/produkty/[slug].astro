---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/common/Header.astro";
import Footer from "../../components/common/Footer.astro";
import ProductCard from "../../components/products/ProductCard.astro";
import AvailabilityBadge from "../../components/products/AvailabilityBadge.astro";
import { ProductService } from "../../services/ProductService";

export async function getStaticPaths() {
  const products = ProductService.getAllProducts();
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const similarProducts = ProductService.getSimilarProducts(product, 3);
const nfzInfo = ProductService.getNFZRefundInfo(product);
const savings = product.originalPrice - product.salePrice;
const savingsPercent = Math.round((savings / product.originalPrice) * 100);
---

<Layout
  title={`${product.name} - Dobry Sklep Medyczny`}
  description={product.description}
  image={product.image}
>
  <Header />

  <main class="py-8">
    <div class="container mx-auto px-4">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ol class="flex items-center space-x-2 text-sm text-gray-600">
          <li><a href="/" class="hover:text-primary-500">Strona główna</a></li>
          <li><span class="mx-2">/</span></li>
          <li>
            <a href="/produkty" class="hover:text-primary-500">Produkty</a>
          </li>
          <li><span class="mx-2">/</span></li>
          <li class="text-gray-800 font-medium">{product.name}</li>
        </ol>
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Product Images -->
        <div>
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <img
              src={product.image}
              alt={product.name}
              class="w-full h-96 object-cover"
            />
          </div>

          <!-- Thumbnail Gallery (if multiple images) -->
          {
            product.images && product.images.length > 1 && (
              <div class="mt-4 flex space-x-2">
                {product.images.map((image, index) => (
                  <button class="w-20 h-20 rounded-lg overflow-hidden border-2 border-gray-200 hover:border-primary-500 transition-colors">
                    <img
                      src={image}
                      alt={`${product.name} - zdjęcie ${index + 1}`}
                      class="w-full h-full object-cover"
                    />
                  </button>
                ))}
              </div>
            )
          }
        </div>

        <!-- Product Info -->
        <div>
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-800 mb-4">
            {product.name}
          </h1>

          <p class="text-lg text-gray-600 mb-6">
            {product.description}
          </p>

          <!-- Pricing -->
          <div class="bg-gray-50 rounded-lg p-6 mb-6">
            <div class="flex items-center space-x-4 mb-4">
              <p class="text-gray-400 line-through text-xl">
                {product.originalPrice.toFixed(2)} zł
              </p>
              <p class="text-3xl font-bold text-primary-500">
                {product.salePrice.toFixed(2)} zł
              </p>
            </div>
            <p class="text-lg text-primary-500 font-semibold mb-4">
              Oszczędzasz {savings.toFixed(2)} zł ({savingsPercent}%)
            </p>

            <!-- NFZ Refund Info -->
            {
              product.nfzRefundable && (
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                  <div class="flex items-center space-x-2 mb-2">
                    <svg
                      class="w-5 h-5 text-blue-500"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="font-semibold text-blue-800">
                      Refundacja NFZ
                    </span>
                  </div>
                  <p class="text-blue-700 text-sm">
                    Refundacja {product.nfzRefundPercentage}% - Twój koszt:{" "}
                    {nfzInfo.patientCost.toFixed(2)} zł
                  </p>
                </div>
              )
            }
          </div>

          <!-- Availability -->
          <div class="mb-6">
            <AvailabilityBadge availability={product.availability} />
          </div>

          <!-- Features -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">
              Główne cechy
            </h3>
            <ul class="space-y-2">
              {
                product.features.map((feature) => (
                  <li class="flex items-center">
                    <svg
                      class="w-5 h-5 text-green-500 mr-3 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Action Buttons -->
          <div class="space-y-4">
            <a
              href="/kontakt?produkt={product.slug}"
              class="w-full bg-primary-500 text-white py-4 px-6 rounded-lg hover:bg-primary-600 transition-colors font-semibold text-center block"
            >
              Zapytaj o produkt
            </a>
            <a
              href="tel:+48711234567"
              class="w-full border-2 border-primary-500 text-primary-500 py-4 px-6 rounded-lg hover:bg-primary-50 transition-colors font-semibold text-center block"
            >
              Zadzwoń: +48 71 123 45 67
            </a>
          </div>
        </div>
      </div>

      <!-- Detailed Description -->
      <section class="mt-16">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Szczegółowy opis</h2>
        <div class="prose max-w-none">
          <p class="text-gray-700 leading-relaxed mb-6">
            {product.detailedDescription}
          </p>
        </div>
      </section>

      <!-- Technical Specifications -->
      <section class="mt-12">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">
          Specyfikacja techniczna
        </h2>
        <div class="bg-gray-50 rounded-lg p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {
              product.technicalSpecs.map((spec) => (
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-primary-500 rounded-full mr-3" />
                  <span class="text-gray-700">{spec}</span>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- Applications and Indications -->
      {
        (product.applications || product.indications) && (
          <section class="mt-12">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {product.applications && (
                <div>
                  <h3 class="text-xl font-semibold text-gray-800 mb-4">
                    Zastosowanie
                  </h3>
                  <ul class="space-y-2">
                    {product.applications.map((application) => (
                      <li class="flex items-start">
                        <svg
                          class="w-4 h-4 text-primary-500 mr-2 mt-1 flex-shrink-0"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <span class="text-gray-700">{application}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {product.indications && (
                <div>
                  <h3 class="text-xl font-semibold text-gray-800 mb-4">
                    Wskazania
                  </h3>
                  <ul class="space-y-2">
                    {product.indications.map((indication) => (
                      <li class="flex items-start">
                        <svg
                          class="w-4 h-4 text-primary-500 mr-2 mt-1 flex-shrink-0"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <span class="text-gray-700">{indication}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </section>
        )
      }

      <!-- Contraindications -->
      {
        product.contraindications && (
          <section class="mt-12">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">
              Przeciwwskazania
            </h3>
            <div class="bg-red-50 border border-red-200 rounded-lg p-6">
              <ul class="space-y-2">
                {product.contraindications.map((contraindication) => (
                  <li class="flex items-start">
                    <svg
                      class="w-4 h-4 text-red-500 mr-2 mt-1 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-red-700">{contraindication}</span>
                  </li>
                ))}
              </ul>
            </div>
          </section>
        )
      }

      <!-- Similar Products -->
      {
        similarProducts.length > 0 && (
          <section class="mt-16">
            <h2 class="text-2xl font-bold text-gray-800 mb-8">
              Podobne produkty
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {similarProducts.map((product) => (
                <ProductCard product={product} />
              ))}
            </div>
          </section>
        )
      }
    </div>
  </main>

  <Footer />
</Layout>

