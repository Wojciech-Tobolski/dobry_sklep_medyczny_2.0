---
const galleryImages = [
  { src: "/images/store-photos/store-view.jpeg", alt: "Widok przez okno" },
  {
    src: "/images/store-photos/store-interior-2.jpeg",
    alt: "Jasne wnętrze z oknem",
  },
  {
    src: "/images/store-photos/store-interior-4.jpg",
    alt: "Strefa przymierzalni",
  },
  {
    src: "/images/store-photos/store-shelves-2.jpeg",
    alt: "Półki z produktami",
  },
  {
    src: "/images/store-photos/store-products.jpeg",
    alt: "Produkty rehabilitacyjne",
  },
  {
    src: "/images/store-photos/store-interior-1.jpeg",
    alt: "Wnętrze sklepu - główny widok",
  },
];
---

<section class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Nasz sklep</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        galleryImages.map((image) => (
          <div class="relative rounded-2xl overflow-hidden shadow-xl group cursor-pointer">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-auto object-contain bg-gray-100 group-hover:scale-105 transition-transform duration-500"
              style="aspect-ratio: 3/4;"
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
